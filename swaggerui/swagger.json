{
  "openapi": "3.0.1",
  "info": {
    "title": "fizzbuzz",
    "contact": {},
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "{host}",
      "variables": {
        "host": {
          "default": "http://api.localhost:8080"
